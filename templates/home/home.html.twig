{% extends "base.html.twig" %}

{% block content %}
    <div style="height: 800px; width: 1000px;" id="map"></div>

    <script>
        var map = L.map('map').setView([42.15, 24.75], 8);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        {% for gps in gpsCollection %}
            var latlngs = [];
            {%  for point in gps.points %}
                latlngs.push([
                    {{ point.lat }},
                    {{ point.lon }}
                ]);
            {% endfor %}

            var polyline = L.polyline(latlngs, {color: 'red'}).addTo(map);
            polyline.bindPopup('<a href="{{ path('gps-view', {id: gps.id}) }}">view details</a>');
        {% endfor %}

        var loadedTracks = {};

        map.on('moveend', function() {
            var ajax = new XMLHttpRequest();
            ajax.onreadystatechange = function() {
                if (this.readyState != 4 || this.status != 200) {
                    return;
                }

                responseAsJson = JSON.parse(this.responseText);
                // console.log(responseAsJson);
                for (var i =0; i < responseAsJson.length; i++) {
                    var id = responseAsJson[i].id;

                    if (loadedTracks[id]) {
                        continue;
                    }

                    loadedTracks[id] = true;

                    var points = responseAsJson[i].points;
                    var pointsAsPolyline = [];
                    for(var j=0; j < points.length; j++) {
                        pointsAsPolyline.push([
                            points[j].lat,
                            points[j].lon
                        ]);
                    }

                    var polyline = L.polyline(pointsAsPolyline, {color: 'red'}).addTo(map);
                    polyline.bindPopup('<a href="#">view details</a>');
                }
            };
            var url = '/gps/list';
            url += '/' + map.getBounds().getNorthEast().lat;
            url += '/' + map.getBounds().getNorthEast().lng;
            url += '/' + map.getBounds().getSouthWest().lat;
            url += '/' + map.getBounds().getSouthWest().lng;
            ajax.open('GET', url);
            ajax.send();
        });

        map.panTo(new L.LatLng(42.15, 24.75));
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(function(position) {
                map.panTo(new L.LatLng(position.coords.latitude, position.coords.longitude));
            });
        }
    </script>
{% endblock %}
